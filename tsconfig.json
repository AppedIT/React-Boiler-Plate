{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "lib": ["dom","DOM.Iterable", "ESNext"],
        "types": ["node", "vite/client", "vite-plugin-svgr/client"],
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": true,
        "jsx": "react-jsx",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"],
            "@services/*": ["./sevices/*"],
            "@styles/*": ["./styles/*"],
            "@store/*": ["./redux/stroe/*"],
            "@mocks/*": ["./mocks/*"],
            "@atoms/*": ["./components/atoms/*"],
            "@assets/*": ["./assets/*"],
            "@hooks/*": ["./hooks/*"]
        }
    },
    "include": ["./src/**/*"],
}